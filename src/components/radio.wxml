<view
	class="dx-radio class {{ size }} {{ color }}"
	wx:if="{{ option.length > 0 }}"
>
	<text
		data-index="{{ index }}"
		class="label {{ item.disabled ? 'disabled': '' }} {{ index_ === index ? 'checked': '' }}"
		bindtap="onChecked"
		wx:key="value"
		wx:for="{{ option }}"
	>{{ item.label || item.value || item }}</text>
</view>
