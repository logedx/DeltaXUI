:host {
	position: fixed;
	bottom: var(--sm);
	left: var(--sm);
	width: var(--xxxl);
	height: var(--xxxl);
	box-shadow: var(--shadow);
	border-radius: 50%;
	overflow: hidden;
}

.dx-pushpin {
	width: 100%;
	height: 100%;
	color: white;
	display: flex;
	align-items: center;
	justify-content: center;
}

.dx-pushpin.info {
	background: var(--info);
}

.dx-pushpin.success {
	background: var(--success);
}

.dx-pushpin.warning {
	background: var(--warning);
}

.dx-pushpin.error {
	background: var(--error);
}
