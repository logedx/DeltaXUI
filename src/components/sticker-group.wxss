.dx-sticker-group {
	width: 100%;
	display: inline-flex;
	flex-wrap: wrap;
}

.dx-sticker-group .item {
	font-size: 72rpx;
	height: 228rpx;
	width: 228rpx;
	display: flex;
	flex-shrink: 0;
	align-items: center;
	justify-content: center;
	box-sizing: border-box;
	position: relative;
	margin-bottom: calc((100% - 228rpx * 3) /2);
	background-image: linear-gradient(to top right, #efefef 25%, transparent 25%, transparent 75%, #efefef 75%, #efefef), linear-gradient(to top right, #efefef 25%, transparent 25%, transparent 75%, #efefef 75%, #efefef);
	background-position: 0 0, 10px 10px;
	background-size: 21px 21px;
	border: dashed 1px #ddd;
	border-radius: var(--radius);
	overflow: hidden;
	color: #ccc;
}

.dx-sticker-group .item:nth-child(3n-1) {
	margin: 0 calc((100% - 228rpx * 3) /2);
}

.dx-sticker-group .item .image {
	width: 100%;
	height: 100%;
}

.dx-sticker-group .item .delete {
	position: absolute;
	right: 4rpx;
	top: 8rpx;
}
