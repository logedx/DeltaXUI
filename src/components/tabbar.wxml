<view class="dx-tabbar {{ color }}">
	<scroll-view
		scroll-x
		enable-flex
		class="overflow"
	>
		<text
			data-index="{{ index }}"
			class="item {{ index_ === index ? 'odd': '' }}"
			bindtap="onTabbarChange"
			wx:key="*this"
			wx:for="{{ option }}"
		>{{ item.label || item }}</text>
	</scroll-view>
</view>
