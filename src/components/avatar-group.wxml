<view class="dx-avatar-group class {{ reverse ? 'reverse' : '' }}">
	<block wx:if="{{ src.length > 0 }}">
		<dx-avatar
			class="item"
			src="{{ item }}"
			size="{{ size }}"
			mode="{{ mode }}"
			color="{{ color }}"
			wx:key="*this"
			wx:for="{{ src }}"
		></dx-avatar>
	</block>

	<dx-avatar
		class="item"
		size="{{ size }}"
		mode="{{ mode }}"
		color="{{ color }}"
		wx:else
	></dx-avatar>
</view>
